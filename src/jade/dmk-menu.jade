.dmk-menu
    div(class="menu-container-{{dmkType}}")
        ul
            li(ng-repeat="option in dmkOptions track by $index"
                ng-click="getNameOption(option.name, option.url, $index);"
                class="option-nav-{{$index + 1}}")
                span.text {{option.name}}
                span(ng-if="option.dropdowns != undefined" class="{{dmkIcon}}")
                ul.dropdown-container(ng-if="option.isActive == true && option.dropdowns")
                    li.search(ng-if="dmkSearchFirst == true"
                       ng-click="$event.stopPropagation()")
                        input.search-input(type="search" ng-model="$parent.search1.name")
                    li(ng-repeat="dropdown in option.dropdowns | filter: search1 track by $index"
                        ng-click="getNameDropdown(dropdown.name, dropdown.url, $parent.$index, $index); $event.stopPropagation()"
                        class="dropdown-nav-{{$index + 1}}")
                        span.text {{dropdown.name}}
                        span(ng-if="dropdown.subOptions" class="{{dmkIcon}}")
                        ul.submenu-container(ng-if="dropdown.isActive == true && dropdown.subOptions")
                            li.search(ng-if="dmkSearchSecond == true"
                            ng-click="$event.stopPropagation()")
                                input.search-input(ng-model="$parent.search2.name")
                            li(ng-repeat="suboption in dropdown.subOptions | filter: search2"
                                ng-click="getNameSuboption(suboption.name, suboption.url); $event.stopPropagation()"
                                class = "suboption-nav-{{$index + 1}}")
                                span.text {{suboption.name}}
